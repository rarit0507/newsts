package com.kh.spring.notice.controller;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.kh.spring.notice.model.service.NoticeService;
import com.kh.spring.notice.model.vo.Notice;

import lombok.RequiredArgsConstructor;
import lombok.extern.slf4j.Slf4j;

@Controller
@RequiredArgsConstructor
@Slf4j
public class NoticeController {

	private final NoticeService noticeService;
	
	// 공지사항 리스트 페이지
	@GetMapping("noticeList")
	public String getNoticeList(@RequestParam(value="page", defaultValue="1") int page, Model model) {
		
		// 페이징
		// 페이징 요소 정의
		int listCount;		// 현재 일반게시판의 게시글 총 개수
		int currentPage;	// 현재 페이지(사용자가 요청한 페이지)
		int pageLimit;		// 페이지 하단에 보일 페이징바의 최대 개수
		int boardLimit;		// 한 페이지에 보여질 게시글의 최대 개수
//		int maxPage;		// 가장 마지막 페이지가 몇 번 페이지인지
//		int startPage;		// 페이지 하단에 보여질 페이징바의 시작 수
//		int endPage;		// 페이지 하단에 보여질 페이징바의 끝 수
		
		// 페이징 요소 초기화
		listCount = noticeService.noticeCount();	// 총 게시글 수
		currentPage = page;		// 현재 페이지
		pageLimit = 10;			// 페이징바 최대 개수
		boardLimit = 10;		// 한 페이지 내 게시글 최대 개수
		
		// 출력된 리스트 개수 확인 로그(시험용)
		log.info("게시글의 총 개수 : {}, 현재 요청 페이지 : {}", listCount, currentPage);
		
		// Map에 현재 페이지 기반, 화면에 나타날 페이징 정의
		Map<String, Integer> map = new HashMap();
		int startValue = (currentPage - 1) * boardLimit + 1;
		int endValue = startValue + boardLimit - 1;
		map.put("startValue", startValue);
		map.put("endValue", endValue);
		
		// findAll 메서드를 이용해 noticeList 불러오기
		List<Notice> noticeList = noticeService.findAll(map);
		
		// 화면에 띄우기 위해 model에 "noticeList" 정의
		model.addAttribute("noticeList",noticeList);
		
		// view의 notice폴더의 list.jsp로 반환
		return "notice/list";
	}
	
	
}
