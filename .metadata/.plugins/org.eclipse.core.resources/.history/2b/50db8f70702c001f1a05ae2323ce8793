<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberMapper">

	<!-- 로그인용 쿼리문 -->
	<select id="login" parameterType="member"> <!-- 원래라면 com.kh.spring.~~.Member / 그러나 mybatis에 별칭 지정해놨으니 그거 쓰면 됨 -->
		SELECT
				USER_ID,
				USER_PWD,
				USER_NAME,
				EMAIL,
				GENDER,
				AGE,
				PHONE,
				ADDRESS,
				ENROLL_DATE,
				MODIFY_DATE,
				STATUS
		  FROM
				MEMBER
		 WHERE
				USER_ID = #{userId}	<!-- mybatis에서 getter 메서드로 값을 뽑아 여기로 가져옴(필요!) -->
		   AND
				USER_PWD = #{userPwd}
		   AND
				STATUS = 'Y'
	</select>
	<!-- 여러 요소(위는 11개)를 하나의 객체(MEMBER)로 묶어주는 것 : mybatis => JAVA ORM -->

</mapper>